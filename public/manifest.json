{
    "manifest_version": 3,
    "name": "Less Annoying Glassdoor",
    "description": "Bypasses HardSell for seamless browsing on Glassdoor",
    "version": "1.0",
    "icons": {
        "128": "icon.png",
        "16": "16.png",
        "48": "48.png"
    },
    "content_scripts": [
        {
            "matches": [
                "http://glassdoor.com/*",
                "http://*.glassdoor.com/*",
                "https://glassdoor.com/*",
                "https://*.glassdoor.com/*"
            ],
            "run_at": "document_idle",
            "js": [
                "js/content_script.js"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "js/remove_hardsell.js"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "permissions": [
        "scripting"
    ],
    "host_permissions": [
        "http://glassdoor.com/*",
        "http://*.glassdoor.com/*",
        "https://glassdoor.com/*",
        "https://*.glassdoor.com/*"
    ]
}